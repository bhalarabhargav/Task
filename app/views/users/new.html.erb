<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">

              <h2 class="fw-bold mb-2 text-uppercase">Signup</h2>
              <p class="text-white-50 mb-5">Please enter your Username and password!</p>
                    
              <div data-mdb-input-init class="form-outline form-white mb-4">
                
                   <%= form_with model: @user do |f| %>
                        <% if @user.errors.any? %>
                          <div>
                            <ul>
                              <% @user.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                              <% end %>
                            </ul>
                          </div>
                        <% end %>
                        <div data-mdb-input-init class="form-outline form-white mb-4">
                          <%= f.label :name %><br>
                          <%= f.text_field :name %>
                        </div>
                        <div data-mdb-input-init class="form-outline form-white mb-4">
                          <%= f.label :password %><br>
                          <%= f.password_field :password %>
                        </div>
                        <div data-mdb-input-init class="form-outline form-white mb-4">
                          <%= f.label :password_confirmation %><br>
                          <%= f.password_field :password_confirmation %>
                        </div>
                        <p>
                         <button data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-light btn-lg px-5" type="submit"> Signup  </button>
                        </p>
              
            </div>
                          <div>
                          <p class="mb-0">Already have an account! <a href="#!" class="text-white-50 fw-bold"><%= link_to 'Login','/user_sessions/new'%></a>
                          </p>
                          </div>
            </div>
              
              <% end %>
             
          </div>
          
        </div>
      </div>
    </div>
  </div>
</section>




